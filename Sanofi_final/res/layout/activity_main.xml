<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/page" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/main_activity_buttons_layout_left_margin"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ib1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content"
            android:src="@drawable/lac" />

        <ImageView
            android:id="@+id/ib2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_activity_button_top_margin"
            android:contentDescription="@string/content"
            android:src="@drawable/wim" />

        <ImageView
            android:id="@+id/ib3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_activity_button_top_margin"
            android:contentDescription="@string/content"
            android:src="@drawable/op" />

        <ImageView
            android:id="@+id/ib4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_activity_button_top_margin"
            android:contentDescription="@string/content"
            android:src="@drawable/omn" />

        <ImageView
            android:id="@+id/ib5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_activity_button_top_margin"
            android:contentDescription="@string/content"
            android:src="@drawable/dol" />
    </LinearLayout>

    <ImageView
        android:id="@+id/sanofi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/main_activity_button_sanofi_bottom_margin"
        android:contentDescription="@string/content"
        android:src="@drawable/bt_sanofi" />

</RelativeLayout>